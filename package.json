  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.jsx",
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@testing-library/react": "^9.4.0",
    "babel-eslint": "^10.0.3",
    "config": "file:/Users/piousbox/projects/ruby/microsites3/iron_warbler/config/environments/development_web",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "react-scripts": "^3.4.1",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme": "^3.11.0",
    "link-module-alias": "^1.2.0"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/config/jest/babelTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@ionic|@stencil|ionicons)/)",
      "\\.pnp\\.[^\\/]+$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "resetMocks": true
  },
  "_moduleAliases": {
    "$components": "src/components",
    "$lib": "src/lib",
    "$shared": "src/shared",
    "$src": "src"
  },
  "dependencies": {
    "@ionic/react": "^6.0.5",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "axios": "^0.25.0",
    "ionicons": "^6.0.1",
    "prop-types": "^15.8.1",
    "styled-components": "^5.3.3"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "build2": "NODE_PATH=~/projects/ruby/microsites3/iron_warbler/config/environments microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "react-scripts test --env=jsdom --colors --watchAll=false",
    "jest": "react-scripts test --env=jsdom -t current --colors --watchAll=false",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "linkToIronWarbler": "./scripts/link_peer_dependencies iron_warbler",
    "linkToGuidjs": "./scripts/link_peer_dependencies guydjs",
    "postinstall": "link-module-alias"
  }
}
